<div class="container text-center">

  <div class="row mb-5">
    <div class="col">
      <h2>生徒としてログイン</h2>
    </div>
  </div><br>

  <div class="mb-5">
    <%= form_with(model: resource, url: session_path(resource_name)) do |f| %>
      <div class="row mb-3">
        <div class="col-sm-3 px-sm-0 offset-sm-1"><%= f.label :メールアドレス %></div>
        <div class="col-sm-3 px-sm-0"><%= f.email_field :email, :size => "40", autofocus: true, autocomplete: "email" %></div>
      </div><br>

      <div class="row mb-5">
        <div class="col-sm-3 px-sm-0 offset-sm-1"><%= f.label :パスワード %></div>
        <div class="col-sm-3 px-sm-0"><%= f.password_field :password, :size => "40", autocomplete: "current-password" %></div>
      </div><br><br>

      <div class="row mb-3">
        <div class="mx-auto">
          <%= f.submit "ログイン", class:"btn btn-primary" %>&emsp;
          <%= link_to 'ゲストログイン（閲覧用）', student_guest_sign_in_path, method: :post, class:"btn btn-warning" %>
        </div>
      </div>
    <% end %>
  </div><br>

    <div>
      <h4 style="width: 300px; background-color: #EEEEEE; text-align: center; margin-top: 20px;">会員登録がお済みでない方</h4><br>
      <p><%= link_to new_student_registration_path do %>こちら<% end %>より新規登録をしてください。</p><br>
    </div>

</div>

